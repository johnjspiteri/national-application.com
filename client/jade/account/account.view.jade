.page
    .content-holder
        form.content(name='form', id='item', data-ng-model='item', data-ng-submit='addItem(form.$valid)', novalidate)
            .fields
                input(data-ng-model='item.plan', placeholder="Plan Number")
                input(data-ng-model='item.organization', placeholder="Organization Name")
                input(data-ng-model='item.email', placeholder="Organization Email")
                input(data-ng-model='item.file', placeholder="URL")

            .logo
                .image
                    .tags
                        .edit
                            .fa.fa-pencil
                                label.file-upload
                                    input(type='file', data-ng-model='new', accept='image/*', base-sixty-four-input)

                        .save(data-ng-click='saveImage(new, $index)', data-ng-show='new.filetype')
                            .fa.fa-cloud
                    .thumb-image(ng-show='!new.filetype')
                        img(ng-src='data:{{image.filetype}};base64,{{image.base64}}')
                    .thumb-image(ng-show='new.filetype')
                        img(ng-src='data:{{new.filetype}};base64,{{new.base64}}')

            button.submit(type="submit", ng-disabled="form.$invalid", ng-class="{'disabled': form.$invalid}") Add Game
