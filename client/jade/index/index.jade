        .locator
            .locator-state
                h2 Search Pharmacies By State & City
                select(type="text", data-ng-model='location.state', ng-options="state for state in states", data-ng-change='stateUpdate(location.state)')
                select(type="text", data-ng-model='location.city', ng-options="city for city in cities | orderBy:'toString()'", data-ng-change='stateUpdate(location.state)', ng-disabled="!location.state", data-ng-show='location.state')
                .submit(type='submit') Search

            .locator-zip
                h2 Search Pharmacies By Zip Code
                input(type="text", data-ng-model='location.zip')
                .submit(data-ng-click='zip()') Search

            .locator-results(data-ng-show='results')
                h2 Pharmacy Locator Results
                .locator-results-content
                    .row-container(ng-repeat='row in results')
                        .pharmacy
                            p(ng-bind='::row.name')
                        .address
                            p(ng-bind='::row.address1')
                        .address
                            p {{::row.state}} - {{::row.city}}
                        .phone
                            p(ng-bind='::row.phone')
