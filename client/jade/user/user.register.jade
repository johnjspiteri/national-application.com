.modal_holder
    form.modal(name="signupForm", method="post", ng-submit="signup()", novalidate)
        .square
            h1 Sign up
            .field
                h5 Email
                input(type="email", id="email", name="email", ng-model="user.email", placeholder="Email", required autofocus)

            .field.end
                h5 Password
                input(type="password", name="password", ng-model="user.password", placeholder="Password", required)

            button.sumbit(type="submit", ng-disabled='signupForm.$invalid', href='#') Sign up
