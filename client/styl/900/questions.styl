.filter-holder
	width 898px
	padding 28px 50px 20px 50px
	margin 0 0 30px 0

	.filter-container
		width 898px

		select
			display block
			float left
			width 298px
			height 70px
			padding 0 0 0 40px
			margin 0 20px 0 0
			font-weight 400
			font-size 31px
			line-height 35px
			background transparent
			background $white
			border: none
			border-bottom 4px solid #333
			border-radius 8px
			text-align center
			appearance:none
			-webkit-appearance none
			-moz-appearance none

		input
			width 428px
			height 64px
			padding 2px 0 0 50px
			margin 0 20px 0 0
			font-size 31px
			line-height 31px
			text-align left

		.reset
			width 78px
			height 64px

			.fa-times
				font-size 23px
				line-height 69px

.answers-holder
	width 1000px
	padding 0
	margin 0 0 20px 10px

	.answer
		width 418px
		padding 26px 30px 18px 30px
		margin 0 20px 20px 0

		h2
			width 418px
			margin 0 0 18px 0
			padding 0 0 8px 0
			font-size 33px
			line-height 40px

		p
			width 408px
			padding 0 5px
			margin 0 0 20px 0
			font-size 23px
			line-height 34px

		.tag-holder
			width 258px

			.tag
				margin 10px 8px 0 0
				padding 0

				h5
					margin 0
					padding 8px 16px
					font-size 15px
					line-height 15px