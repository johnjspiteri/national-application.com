md-sidenav.md-closed
    display: none

md-sidenav
    position: absolute;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
    flex-direction: column;
    width: 164px
    max-width: 164px
    height 2000px;
    min-height 2000px;
    bottom: 0
    background none
    outline none
    overflow: none
    background $background
    box-sizing: border-box;
    left: 0
    top: 0
    z-index: 999999
    -webkit-transform: translate3d(0%, 0, 0)
    transform: translate3d(0%, 0, 0)
    overflow scroll

md-sidenav.md-closed
    -webkit-transform: translate3d(-100%, 0, 0);
    transform: translate3d(-100%, 0, 0);

md-sidenav.md-closed-remove
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    transition: all 1s cubic-bezier(0.25, 0.8, 0.25, 1);

md-sidenav.md-closed-add.md-closed-add-active, md-sidenav.md-closed-remove.md-closed-remove-active
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);

md-sidenav.md-locked-open-add,
md-sidenav.md-locked-open-remove
    position: static;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);

.side
    display block
    float left
    width 164px
    height 2000px;
    min-height 2000px;
    top 0
    padding 0 0 1000px 0
    margin 0
    background $background
    border-right $black-border
    z-index: 99999

    ul
        float left
        width 164px
        height 1000px

        li
            float: left
            width 164px
            padding: 22px 0 18px 0
            margin: 0
            background $background
            border-bottom $border-dotted
            cursor pointer

            h4
                float: left
                width 150px
                padding 0
                margin 0
                font-style italic
                font-weight 500
                font-size 23px
                line-height 23px
                color $white
                text-align: right
                text-shadow $burgundy-text-shadow

        li.close
            float: left
            padding: 14px 0 10px 0

            .fa-long-arrow-left
                float: left
                width 140px
                padding 0
                margin: 0
                font-size 23px
                line-height 23px
                color $white
                text-align: right
                text-shadow $burgundy-text-shadow

        li.active
            background $burgundy

            h4
                font-style normal
