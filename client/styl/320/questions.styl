.filter-holder
    float left
    width 240px
    padding 20px
    margin 50px 0 30px 0
    background $header-tile
    border-bottom 4px solid #333
    border-radius 4px

    h2
        float left
        width 100%
        padding 0
        margin 0 0 20px 0
        font-weight 600
        font-size 24px
        line-height 32px
        color $white
        text-align center
        text-shadow $shadow

    .filter-container
        float left
        width 220px
        padding 0
        margin 0 0 0 10px

        select
            float left
            width 220px
            height 50px
            padding 0
            margin 0 0 20px 0
            font-weight 600
            font-size 27px
            line-height 29px
            background: transparent
            border: none
            background #fff
            border $border
            border-bottom 4px solid #333
            border-radius 8px
            text-align center
            appearance none

        input
            float left
            width 220px
            height 50px
            padding 0
            margin 0 0 20px 0
            font-weight 600
            font-size 27px
            line-height 29px
            text-align center
            border $border-light
            border-bottom 4px solid #333
            border-radius 8px

        .reset
            float left
            width 220px
            height 50px
            padding 0
            margin 0
            // background $black
            color $white
            font-weight 500
            font-size 23px
            line-height 54px
            text-align center
            border none
            border-bottom 4px solid #333
            border-radius 8px
            cursor pointer

            .fa-times
                // float left
                width 30px
                padding: 0
                margin 0 0 0 10px
                font-size 23px
                line-height 54px
                color $white
                text-align center
                text-shadow $shadow

.answers-holder
    float left
    width 280px
    padding 0
    margin 0 0 20px 0

    .answer
        float left
        width 238px
        padding 20px
        margin 0 0 20px 0
        background #fff
        border 1px solid #000
        border-bottom 4px solid #333
        border-radius 0 0 4px 4px

        h2
            float left
            width 238px
            margin 0 0 14px 0
            padding 0 0 8px 0
            font-weight 600
            font-size 23px
            line-height 33px
            text-align center
            border-bottom 2px solid #ccc

        p
            float left
            width 100%
            margin 0 0 18px 0
            padding 0
            font-weight 400
            font-size 17px
            line-height 29px
            color $grey
            text-align center

        .tag-holder
            position relative
            width 238px
            padding 0
            margin 0 auto

            .tag
                float left
                margin 10px 8px 0 0
                padding 0
                background $header-tile
                border-bottom 4px solid #333
                border-radius 4px

                h5
                    float left
                    margin 0
                    padding 8px 16px
                    // font-style italic
                    font-weight 400
                    font-size 15px
                    line-height 15px
                    color $white
                    text-shadow $shadow
