.filter
	float left
	width 298px
	padding 18px 0 14px 0
	margin 0 0 14px 10px
	background $grey
	border $grey-border
	border-bottom $grey-border-bottom
	border-radius $border-radius

	select
		display none

	input
		float left
		width 258px
		height 58px
		padding 2px 0 0 0
		margin 0 0 12px 20px
		font-weight 400
		font-size 27px
		line-height 27px
		color $black
		border $input-border
		border-bottom $input-border-bottom
		border-radius $border-radius
		text-align center

	::-webkit-input-placeholder
		line-height: normal

	.reset
		float left
		width 258px
		height 50px
		padding 0
		margin 0 0 0 20px
		background $burgundy
		border $burgundy-border
		border-bottom $burgundy-border-bottom
		border-radius $border-radius
		cursor pointer

		.fa-times
			width 100%
			padding 0
			margin 0
			font-weight normal
			font-size 24px
			line-height 51px
			color $white
			text-align center
			text-shadow $burgundy-text-shadow

.answers
	float left
	width 300px
	padding 0
	margin 0 0 20px 10px
	font-size: 0

	.answer
		display inline-block
		vertical-align top
		margin: 0 1% 16px 0
		font-size 16px
		width 258px
		padding 16px 20px 6px 20px
		margin 0 0 14px 0
		background $card
		border $card-border
		border-bottom $card-border-bottom
		border-radius $border-radius

		h2
			float left
			width 238px
			margin 0 0 15px 0
			padding 9px 10px 7px 10px
			font-weight 400
			font-size 23px
			line-height 27px
			color $white
			background $burgundy
			border $burgundy-border
			border-bottom $burgundy-border-bottom
			border-radius $border-radius
			text-align center
			text-shadow $burgundy-text-shadow

		p
			float left
			width 100%
			margin 0 0 18px 0
			padding 0
			font-weight 400
			font-size 18px
			line-height 27px
			color $black
			text-align center

		.tag-holder
			position relative
			width 240px
			padding 0
			margin 0 auto

			.tag
				float left
				margin 10px 8px 0 0
				padding 0
				background $burgundy
				border-bottom $burgundy-border-bottom
				border-radius $border-radius

				h5
					float left
					margin 0
					padding 8px 16px 6px 16px
					font-style italic
					font-weight 400
					font-size 15px
					line-height 15px
					color $white
					text-shadow $burgundy-text-shadow
