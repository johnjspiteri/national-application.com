.filter-holder
    float left
    width 280px
    padding 20px 0 20px 0
    margin 0 0 20px 20px
    background $tag
    border-bottom 3px solid $tag-border
    border-radius $border-radius

    .filter-container
        float left
        width 280px
        padding 0
        margin 0

        select
            display none
            float left
            width 240px
            height 60px
            padding 0
            margin 0 0 12px 20px
            font-weight 600
            font-size 27px
            line-height 29px
            background: transparent
            border: none
            background $white
            border-bottom 4px solid #333
            border-radius 8px
            text-align center
            appearance none

        input
            float left
            width 240px
            height 50px
            padding 0
            margin 0 0 12px 20px
            font-weight 500
            font-size 27px
            line-height 29px
            text-align center
            border none
            border-bottom 3px solid #333
            border-radius $border-radius

        ::-webkit-input-placeholder
            line-height: normal

        .reset
            float left
            width 240px
            height 50px
            padding 0
            margin 0 0 0 20px
            color $white
            font-weight 500
            font-size 23px
            line-height 52px
            background $header-tile
            border none
            border-bottom 3px solid #333
            border-radius $border-radius
            cursor pointer

            .fa-times
                width 100%
                padding 0
                margin 0
                font-size 23px
                line-height 54px
                color $white
                text-align center
                text-shadow $shadow

.answers-holder
    float left
    width 280px
    padding 0
    margin 0 0 20px 20px

    .answer
        float left
        width 240px
        padding 20px
        margin 0 0 14px 0
        background $card
        border-bottom 4px solid #333
        border-radius $border-radius

        h2
            float left
            width 100%
            margin 0 0 14px 0
            padding 0 0 8px 0
            font-weight 700
            font-size 23px
            line-height 29px
            text-align center
            border-bottom 2px solid #ccc

        p
            float left
            width 100%
            margin 0 0 18px 0
            padding 0
            font-weight 600
            font-size 18px
            line-height 27px
            color $grey
            text-align center

        .tag-holder
            position relative
            width 240px
            padding 0
            margin 0 auto

            .tag
                float left
                margin 10px 8px 0 0
                padding 0
                background $tag
                border-bottom 4px solid $tag-border
                border-radius $border-radius

                h5
                    float left
                    margin 0
                    padding 8px 16px 6px 16px
                    font-style italic
                    font-weight 400
                    font-size 15px
                    line-height 15px
                    color $white
                    text-shadow $shadow
