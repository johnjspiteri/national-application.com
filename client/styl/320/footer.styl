footer
	float left
	width 100%
	height 74px
	background $card
	border-top 1px solid #333

	.footer
		position relative
		width 300px
		height 74px
		margin 0 auto

		.logo
			float left
			width 150px
			margin 4px 20px 0 0
			padding 4px

			img
				float left
				width 100%

		.link
			float left
			margin 0 20px 0 0

			p
			a
				float left
				padding 0
				margin 0
				font-weight 500
				font-size 17px
				line-height 23px
				color $black
				text-align center
				text-shadow $card-text-shadow
				cursor pointer

			a
				font-style italic

		.link.email
			display none

		.link.phone
			margin 12px 0 0 0

		.link.privacy
			margin 12px 0 0 0

		.legal
			float left
			width 150px