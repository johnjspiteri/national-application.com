footer
    float left
    width 100%
    height 58px
    background $header-tile
    border-top $header-tile-bottom

    .footer
        position relative
        width 320px
        height 58px
        margin 0 auto

        .link
            float left
            margin 10px 20px 0 0

            p
                float left
                font-weight 600
                font-size 16px
                line-height 20px
                color $white
                text-shadow $shadow
                text-align center

                i
                    color $yellow

        .link.email
            display none

        .link.phone
            margin 10px 20px 0 20px

        .link.terms
            margin 10px 0 0 0