footer
    float left
    width 100%
    height 74px
    background $grey
    border-top 1px solid #333

    .footer
        position relative
        width 320px
        height 74px
        margin 0 auto

        .link
            float left
            margin 0 20px 0 0

            p
                float left
                padding 0
                margin 0
                font-weight 500
                font-size 16px
                line-height 24px
                color $white
                text-align center
                text-shadow $grey-text-shadow
                cursor pointer

            a
                font-style italic
                font-size 16px
                line-height 24px
                color $yellow

        .link.email
            display none

        .link.phone
            margin 12px 30px 0 30px

        .link.privacy
            margin 12px 0 0 0

        .legal
            float left
            width 150px