footer
	float left
	width 100%
	height 74px
	background $header
	border-top $header-border

	.footer
		position relative
		width 280px
		height 74px
		margin 0 auto

		.logo
			float left
			width 130px
			padding 0
			margin 12px 30px 0 0

			img
				float left
				width 100%

		.link
			float left
			width 120px
			padding 0
			margin 0

			p
			a
				float left
				width 100%
				padding 0
				margin 0 0 6px 0
				font-weight 400
				font-size 16px
				line-height 16px
				color $grey
				text-align center
				text-shadow $card-text-shadow
				cursor pointer

			a
				margin 0
				font-size 18px
				line-height 18px
				color $burgundy
				text-shadow $card-text-shadow

		.link.email
			display none

		.link.phone
			margin 16px 0 0 0

		.link.privacy
			margin 12px 0 0 0

		.legal
			float left
			width 150px