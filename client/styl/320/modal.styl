.modal-holder
	position absolute
	width 300px
	margin 0 0 0 -150px
	top 0
	left 50%
	z-index 9999999

	.modal-container
		float left
		width 280px
		padding 14px 10px 18px 10px
		margin 8px 0 12px 0
		background $background
		border $black-border
		border-radius $border-radius

		h2
			float left
			width 100%
			padding 0
			margin 0 0 10px 0
			font-weight 400
			font-size 25px
			line-height 34px
			color $white
			text-align center

		h3
			float left
			width 260px
			padding 0
			margin 0 0 14px 10px
			font-weight 400
			font-size 19px
			line-height 27px
			color $white
			text-align center

		a
			font-style italic
			color $burgundy
			text-shadow $shadow

		.print
			float left
			width 280px
			border-bottom 3px solid #444
			border-radius $border-radius

			img
				float left
				width 280px
				border-radius $border-radius

		.fa-close
			float left
			width 20px
			padding 0
			margin 0 0 18px 130px
			font-weight 600
			font-size 19px
			line-height 19px
			color $black-light
			text-align center
			// text-shadow $card-text-shadow
			cursor pointer

		.row
			float left
			width 280px
			padding 0
			margin 0

			input
				float left
				width 280px
				height 60px
				padding 2px 0 0 0
				margin 0 0 12px 0
				font-weight 500
				font-size 25px
				line-height 25px
				background $white
				border none
				border-bottom 4px solid $black-light
				border-radius $border-radius
				text-align center
				outline none

			::-webkit-input-placeholder
				line-height: normal

		.submit
			float left
			width 280px
			padding 14px 0 10px 0
			margin 0 0 18px 0
			font-weight 600
			font-size 27px
			line-height 27px
			color $white
			background $burgundy
			border none
			border-bottom 4px solid $burgundy-border
			border-radius $border-radius
			box-shadow none
			text-align center
			text-shadow $burgundy-text-shadow
			vertical-align middle;
			user-select none
			cursor pointer
			outline none

		.submit.print
			margin 14px 0 14px 0

		.brand-holder
			float left
			width 260px
			padding 10px
			margin 0 0 10px 0
			background $card
			border-radius 4px 4px 4px 4px

			img
				float left
				width 100%

		.legal
			float left
			width 250px
			padding 0
			margin 14px 0 0 15px

			p
				float left
				width 100%
				padding 0
				margin 0 0 18px 0
				font-weight 500
				font-size 16px
				line-height 25px
				text-align center
				color $white
				text-shadow $burgundy-text-shadow

			a
				font-style italic
				font-weight 600
				font-size 17px
				line-height 25px
				color $white
				text-align center
				text-shadow $burgundy-text-shadow