.modal-holder
	position absolute
	width 300px
	margin 0 0 0 -150px
	top 0
	left 50%
	z-index 9999999

	.modal-container
		float left
		width 280px
		padding 14px 10px 18px 10px
		margin 8px 0 12px 0
		background #ccc
		border $black-border
		border-radius $border-radius

		.print
			float left
			width 280px
			border-bottom 3px solid #444
			border-radius $border-radius

			img
				float left
				width 280px
				border-radius $border-radius

		.fa-close
			float left
			width 20px
			padding 0
			margin 0 0 16px 130px
			font-weight 600
			font-size 18px
			line-height 18px
			color $black
			text-align center
			text-shadow $white-shadow
			cursor pointer

		.row
			float left
			width 280px
			padding 0
			margin 0

			input
				float left
				width 280px
				height 60px
				padding 0
				margin 0 0 12px 0
				font-weight 600
				font-size 25px
				line-height 25px
				background $white
				border none
				border-bottom 4px solid $grey
				border-radius $border-radius
				text-align center

			::-webkit-input-placeholder
				line-height: normal

		.submit
			float left
			width 280px
			height 34px
			padding 12px 0 10px 0
			margin 0 0 18px 0
			font-weight 600
			font-size 29px
			line-height 34px
			color $white
			background $tag
			border none
			border-bottom 4px solid $tag-border
			border-radius $border-radius
			box-shadow none
			// box-shadow inset 0 1px 0 rgba(255,255,255,.1), 0 1px 2px rgba(0,0,0,.05);
			// box-shadow 1px 1px 4px #aaa
			text-align center
			text-shadow $shadow
			vertical-align middle;
			user-select none
			cursor pointer

		.submit.print
			margin 14px 0 14px 0

		.legal
			float left
			width 260px
			padding 0
			margin 10px 0 0 10px

			p
				float left
				width 100%
				padding 0
				margin 0 0 14px 0
				font-weight 500
				font-size 16px
				line-height 26px
				text-align center
				color $black
				text-shadow $white-shadow

			a
				font-weight 500
				font-size 18px
				line-height 26px
				color $burgundy
				text-align center
				text-shadow $white-shadow