.card-member
	float left
	width 320px
	padding 20px 0 0 0
	margin 0 0 12px 0
	background $card
	border-top none
	border-bottom 4px solid #333
	overflow hidden

	.member
		float left
		width 300px
		padding 0 0 20px 20px
		margin 0

		.member-brand
			float left
			width 280px
			margin 0 0 20px 0

			img
				float left
				width 100%
				height 100%
				padding 0
				margin 0
				
		.member-content
			float left
			width 290px
			margin 10px 0 0 10px

			.row
				float left
				margin 0

				h4
					float left
					width 100%
					font-weight 400
					font-size 21px
					line-height 27px
					color $grey
					text-shadow $card-text-shadow
					text-align left

				.left
					float left
					width 150px
					margin 0 0 14px 0

				.right
					float left
					width 140px
					margin 0 0 14px 0

					h4
						font-weight 500
						color $burgundy
						text-align left
						text-shadow $card-text-shadow

	.disclaimer
		float left
		width 280px
		padding 30px 10px 20px 30px
		margin 0
		background #fff
		border-top 2px dotted #999

		p
			width 280px
			padding 0
			margin 0 0 18px 0
			font-weight 500
			font-size 17px
			line-height 27px
			color $black-light
			text-shadow $card-text-shadow
			text-align left

		a
			padding 0
			margin 0
			font-weight 500
			font-size 17px
			line-height 27px
			color $grey
			text-shadow $card-text-shadow

		.brand
			float left
			width 280px
			margin 0 20px 20px 0

			img
				float left
				width 240px


.card-modal
	float left
	width 254px
	padding 28px 0px 16px 26px
	margin 0 0 12px 0
	background $card
	border-top none
	border-bottom 4px solid $card-border
	border-radius 8px
	overflow hidden

	.card-logo
		position absolute
		width 64px
		padding 0
		margin 132px 0 0 190px
		z-index 1

		img
			float left
			width 100%

	.card-content
		position relative
		width 250px
		padding 0
		margin 0
		z-index 99

		h1
			float left
			width 260px
			margin 0 0 12px 0
			font-weight 400
			font-size 28px
			line-height 28px
			color $black-light
			text-align left
			text-shadow $card-text-shadow

		.company
			float left
			width 260px
			margin 0 0 28px 0

			h5
				float left
				font-style italic
				font-weight 400
				font-size 20px
				line-height 20px
				color $burgundy
				text-align left
				text-shadow $card-text-shadow

			span
				float left
				padding 0
				margin 0 8px
				font-size 22px
				line-height 22px
				color $grey
				text-align left
				text-shadow $card-text-shadow

		.patient-holder
			float left
			width 100%
			padding 0
			margin 0

			h6
				float left
				width 100%
				padding 0
				margin 0 0 28px 0
				font-weight 400
				font-size 23px
				line-height 23px
				color $black-light
				background none
				border none
				outline none
				text-align left
				text-shadow $card-text-shadow

			.row-holder
				float left
				width 200px

				.row
					float left
					width 100%
					padding 0
					margin 0 0 10px 0

					h6
						float left
						width 84px
						padding 0
						margin 0
						font-weight 400
						font-size 14px
						line-height 14px
						color $grey
						text-shadow $card-text-shadow
						
			.lines
				float left 
				width 54px
				padding 0
				margin 20px 0 0 0


