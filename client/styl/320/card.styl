.card-member
	float left
	width 320px
	padding 20px 0 0 0
	margin 0 0 12px 0
	background $card
	border-top none
	border-bottom 4px solid #333
	overflow hidden

	.member
		float left
		width 290px
		padding 0 0 20px 30px
		margin 0

		.member-content
			float left
			width 290px
			margin 10px 0 10px 0

			.row
				float left
				margin 0
				// margin 0 0 14px 0

				h4
					float left
					width 100%
					font-weight 400
					font-size 17px
					line-height 17px
					color $white
					text-shadow $burgundy-text-shadow
					text-align left

				.left
					float left
					width 54px
					margin 0 0 12px 0

				.right
					float left
					width 80px
					margin 0 0 12px 0

					h4
						color $burgundy
						text-align left
						text-shadow $burgundy-text-shadow

				.left.small
					width 60px
					margin 0 0 12px 0

				.right.small
					width 220px
					margin 0 0 12px 0

				.left.middle
					width 140px
					margin 0 0 6px 0

				.right.middle
					width 140px
					margin 0 0 6px 0

		.member-brand
			float left
			width 240px
			margin 0 0 0 10px

			img
				float left
				width 100%
				height 100%
				padding 0
				margin 0

	.disclaimer
		float left
		width 280px
		padding 30px 10px 10px 30px
		margin 0
		background #fff
		border-top 2px dotted #999

		p
			width 260px
			padding 0
			margin 0 0 22px 0
			font-weight 300
			font-size 16px
			line-height 25px
			color $white
			text-shadow $burgundy-text-shadow
			text-align left

		a
			float left
			width 100%
			padding 0
			margin 0
			font-weight 500
			font-size 21px
			line-height 21px
			color $white
			text-shadow $burgundy-text-shadow

		.brand
			float left
			width 280px
			margin 0 20px 20px 0

			img
				float left
				width 180px


.card-modal
	float left
	width 254px
	padding 28px 0px 16px 26px
	margin 0 0 12px 0
	background $card
	border-top none
	border-bottom 4px solid $card-border
	border-radius 8px
	overflow hidden

	.card-logo
		position absolute
		width 64px
		padding 0
		margin 132px 0 0 190px
		z-index 1

		img
			float left
			width 100%

	.card-content
		position relative
		width 250px
		padding 0
		margin 0
		z-index 99

		h1
			float left
			width 100%
			margin 0 0 11px 0
			font-weight 400
			font-size 29px
			line-height 29px
			color $white
			text-align left
			text-shadow $burgundy-text-shadow

		.company
			float left
			width 100%
			margin 0 0 32px 0

			h5
				float left
				font-weight 400
				font-size 20px
				line-height 20px
				color $white
				text-align left
				text-shadow $burgundy-text-shadow

			span
				float left
				padding 0
				margin 0 8px
				font-size 22px
				line-height 22px
				color $white
				text-align left
				text-shadow $burgundy-text-shadow

		.patient-holder
			float left
			width 100%
			padding 0
			margin 0

			h6
				float left
				width 100%
				padding 0
				margin 0 0 32px 0
				font-weight 400
				font-size 23px
				line-height 23px
				color $white
				background none
				border none
				outline none
				text-align left
				text-shadow $burgundy-text-shadow

			.row
				float left
				width 100%
				padding 0
				margin 0 0 9px 0

				h6
					float left
					width 94px
					padding 0
					margin 0
					font-weight 400
					font-size 15px
					line-height 15px
					color $white
					text-shadow $burgundy-text-shadow

