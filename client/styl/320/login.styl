.modal_holder
    float: left
    width 100%
    margin 10px 0 30px 0

    .modal
        position: relative
        width 300px
        padding: 0
        margin: 0 auto
        z-index: 9999

        .square
            float: left
            width 258px
            padding 28px 20px 24px 20px
            margin 0
            border $black-border
            background $card

            h1
                float: left
                width 258px
                padding: 0 0 9px 0
                margin 0 0 28px 0
                font-weight 700
                font-size 39px
                line-height 39px
                border-bottom 3px solid $grey
                text-shadow $card-text-shadow
                text-align center

            .field
            .field.textarea
                float: left
                width 258px
                padding 0
                margin: 0 0 36px 0

                h5
                    float: left
                    width 100%
                    margin 0 0 14px 0
                    font-size 21px
                    line-height 21px
                    color $grey
                    text-align: center
                    text-shadow $card-text-shadow

                input
                    float: left
                    width 256px
                    height 48px
                    padding 10px 0 0 0
                    font-weight 700
                    font-size 21px
                    line-height 21px
                    text-align: center
                    border-radius 0
                    border $border
                    -webkit-appearance:none
                    -moz-appearance:none
                    appearance:none

            .field.end
                margin 0 0 18px 0

            .submit
                float: left
                width 258px
                height 58px
                padding: 0
                margin: 0
                font-weight 700
                font-size 27px
                line-height 60px
                box-shadow none
                color $white
                text-align: center
                text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
                background #333
                background-image: linear-gradient(to bottom, #444444, #333333);
                background-repeat: repeat-x;
                border-color: rgba(0, 0, 0, 0.5) rgba(0, 0, 0, 0.5) rgba(0, 0, 0, 0.8);
                border-radius 4px
                box-shadow: inset 0 1px 0 rgba(255,255,255,.1), 0 1px 2px rgba(0,0,0,.05);
                box-shadow 1px 1px 4px #aaa
                -webkit-user-select: none
                -moz-user-select: none
                -ms-user-select: none
                user-select: none
                background: -moz-linear-grad
                vertical-align: middle;
                text-shadow $grey-text-shadow
                cursor pointer

                span.fa-lock
                    float: none
                    margin 0 0 0 10px
                    font-size 25px
                    line-height 25px
                    color $white
                    text-shadow $grey-text-shadow
