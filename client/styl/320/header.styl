header
	float left
	width 100%
	padding 0
	margin 0 0 20px 0
	background $header
	border-bottom $border-header

	.header
		position relative
		width 280px
		padding 0
		margin 0 auto

		.brand
			float left
			width 100%
			padding 0 0 12px 0
			margin 0

			.logo
				float left
				width 250px
				padding 0
				margin 6px 0 16px 15px

				img
					float left
					width 100%
					height 100%

			.mobile-navigation
				float left
				width 278px
				padding 10px 0 8px 0
				margin 0
				background $card
				border $border
				border-radius 4px

				h5
					float left
					width 100%
					padding 0
					margin 0
					font-weight 600
					font-size 22px
					line-height 22px
					color $grey
					text-align center
					text-shadow $white-shadow

		nav
			display none

md-sidenav
	position: absolute;
	-webkit-flex-direction: column;
	-ms-flex-direction: column;
	flex-direction: column;
	width: 144px
	max-width: 144px
	height 600px
	max-height 700px
	// height 100%
	// min-height 100%
	bottom: 0
	background none
	outline none
	overflow: none
	box-sizing: border-box;
	left: 0
	top: 0
	z-index: 999999
	-webkit-transform: translate3d(0%, 0, 0)
	transform: translate3d(0%, 0, 0)
	overflow scroll

 md-sidenav.md-closed
	//-webkit-transform: translate3d(-100%, 0, 0);
	transform: translate3d(-100%, 0, 0)

md-sidenav.md-closed-remove
	display: -webkit-flex
	display: -ms-flexbox
	display: flex
	transition: all 1s cubic-bezier(0.25, 0.8, 0.25, 1)

md-sidenav.md-closed-add.md-closed-add-active, md-sidenav.md-closed-remove.md-closed-remove-active
	transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1)

