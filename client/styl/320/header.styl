header
	float left
	width 100%
	padding 0
	margin 0 0 20px 0
	background none
	background $header
	border-bottom $header-border-bottom

	.header
		position relative
		width 280px
		padding 0
		margin 0 auto

		.brand
			float left
			width 100%
			padding 0 0 14px 0
			margin 0

			.logo
				float left
				width 210px
				padding 0
				margin 8px 24px 0 0

				img
					float left
					width 100%
					height 100%

			.mobile
				float left
				width 42px
				padding 9px 0 7px 0
				margin 26px 0 0 0
				background $burgundy
				border $burgundy-border
				border-bottom $burgundy-border-bottom
				border-radius $border-radius
				cursor pointer

				.fa-bars
					float left
					width 100%
					padding 0
					margin 0
					font-weight normal
					font-size 22px
					line-height 22px
					color $white
					text-align center
					text-shadow $burgundy-text-shadow

		nav
			display none