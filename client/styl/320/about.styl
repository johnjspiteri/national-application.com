.contact-holder
    float left
    width 280px
    padding 0
    margin 0 0 0 20px
    border none
    border-bottom none
    background none

    .contact-detail
        float left
        width 238px
        padding 20px 20px 24px 20px
        margin 0 0 14px 0
        border none
        border-bottom 3px solid #333
        background $white
        border-radius $border-radius

        h2
            float left
            width 100%
            padding 0
            margin 0 0 18px 0
            font-size 28px
            line-height 32px
            text-align center

        .contact-container
            float left
            width 238px
            padding 0
            margin 0
            border none

            p
                float left
                width 100%
                padding 0
                margin 0 0 14px 0
                font-size 16px
                line-height 16px
                font-weight 600
                text-align center

            a
                float left
                width 100%
                padding 0
                margin 0 0 12px 0
                font-weight 800
                font-size 20px
                line-height 20px
                color $burgundy
                text-align center
                text-shadow $burgundy-text-shadow

            h4
                float left
                width 100%
                padding 0
                margin 5px 0 0 0
                font-weight 500
                font-size 17px
                line-height 24px
                text-align center

    .contact-form
        float left
        width 238px
        padding 30px 20px 20px 20px
        margin 0 0 15px 0
        background $white
        border-bottom 3px solid #333
        border-radius $border-radius

        .row
            float left
            width 238px
            padding 0
            margin 0 0 12px 0

            input
                width 238px
                height 52px
                padding 6px 0 0 0
                margin 0
                font-weight 500
                font-size 21px
                line-height 21px
                text-align center
                border none
                border-bottom 3px solid #333
                border-radius $border-radius

            textarea
                float left
                width 218px
                height 80px
                padding 16px 10px 14px 10px
                margin 0
                font-size 21px
                line-height 25px
                border none
                text-align center
                border-bottom 3px solid #333
                border-radius $border-radius

        .submit
            float left
            width 240px
            height 50px
            padding 0
            margin 0
            font-style italic
            font-weight 600
            font-size 25px
            line-height 52px
            color $white
            background $burgundy
            border none
            border-bottom 3px solid $burgundy-border
            background-repeat repeat-x;
            border-radius $border-radius
            box-shadow none
            box-shadow inset 0 1px 0 rgba(255,255,255,.1), 0 1px 2px rgba(0,0,0,.05);
            box-shadow 1px 1px 4px #aaa
            text-align center
            text-shadow $burgundy-text-shadow
            vertical-align middle;
            user-select none
            cursor pointer

    .card-confirmation
        float left
        width 238px
        padding 0
        margin 0
        border $border
        border-bottom 3px solid #333
        border-radius $border-radius

        h1
            float left
            width 100%
            padding 0
            margin 0 0 20px 0
            font-size 24px
            text-align center

        h2
            float left
            width 100%
            padding 0
            margin 0 0 15px 0
            font-size 18px
            font-weight 400
            text-align center

        p
            float left
            width 100%
            margin 0
            font-size 14px
            font-weight 200
            text-align center

.map
    float left
    width 280px
    height 280px
    padding 0
    margin 0 0 35px 20px
    background #ccc
    border none
    border-bottom 4px solid #333
    border-radius $border-radius

    #map_canvas
        border-radius $border-radius
