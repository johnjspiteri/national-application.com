.page
	position relative
	width 100%

	.content-holder
		position relative
		width 440px

        .content
			width 440px

			.main
				width 440px
				padding 0
				margin 30px 0 40px 0

				.rx-card
					width 420px
					padding 20px 0px 20px 20px
					margin 0 0 20px 0

					h2
						width 100%
						margin 0 0 18px 0
						font-size 34px
						line-height 36px

					.card-content
						width 420px

						.card-headline
							width 100%

							.company
								width 100%
								margin 0 0 20px 0

								h5
									font-size 22px
									line-height 26px

								span
									margin 0 6px
									font-size 16px
									line-height 23px

							.patient-holder
								width 100%
								padding 0
								margin 0

								.row
									width 100%
									padding 0
									margin 0 0 12px 0

									input
										width 100%
										margin 0 0 18px 0
										font-size 22px
										line-height 24px

									h6
										width 82px
										padding 0
										margin 0
										font-size 11px
										line-height 11px

				.rx-card-download
					width 440px
					padding 0
					margin 0

					.column
						width 90px
						padding 5px 0 5px 5px
						margin 0 15px 10px 0
						background $header-tile
						border-bottom 4px solid #333
						border-radius 8px
						cursor pointer

						p
							width 100%
							padding 0
							margin 0
							font-weight 500
							color $white
							font-size 14px
							line-height 20px
							text-align center
							text-shadow $shadow

							span.fa-cloud
							span.fa-mobile
							span.fa-send
							span.fa-file-text
								width 100%
								padding 0
								margin 0
								height 26px
								font-size 22px
								text-align center

							span.fa-mobile
								height 26px
								font-size 26px
								margin 0

							span.fa-send
								font-size 20px

							span.fa-file-text
								font-size 22px

			.points
				width 440px
				//height 406px
				padding 0 0 0 20px
				margin 0 0 20px 0
				// background $header-tile
				// border-bottom 4px solid #333
				// border-radius 8px

				.point
					width 100%
					padding 0
					margin 0 0 25px 0

					div.fa-certificate
						width 86px
						padding 0
						margin 0
						color #ff9
						font-size 40px
						line-height 44px
						text-shadow $shadow
						//background #ff9

					.text
						width 344px
						padding 0
						margin 0

						h3
							width 100%
							padding 0
							margin 0
							font-weight 600
							font-size 26px
							line-height 44px
							color $white
							text-align left
							text-shadow $shadow

							span
								padding 0 0 10px 0
								font-style italic
								border-bottom 6px solid #666

			.center
				width 440px
				padding 0
				margin 0 0 40px 0

				span.fa-certificate
					position absolute
					width 20px
					margin -18px 0 0 430px
					font-size 30px
					color #ff9
					text-shadow $shadow

				h1
					width 430px
					//height 40px
					padding 5px
					margin 0 0 28px 0
					font-weight 500
					font-size 20px
					line-height 28px
					color $white
					text-align center
					text-shadow $shadow
					background $header-tile
					border-bottom 4px solid #333
					border-radius 8px

				.center-holder
					width 420px
					padding 20px 0 20px 20px
					margin 0
					background #FFF
					border-bottom 4px solid #333
					border-radius 12px

					.logo
						padding 0 30px 20px 0
						margin 0 0 0 10px

						img
							float left
							height 30px
							padding 0
							margin 0
							font-size 38px

			.locator
				float left
				width 440px
				margin 0
				padding 0

				h2
					float left
					width 100%
					padding 0
					margin 0 0 18px 0
					font-weight 500
					font-size 22px
					line-height 50px
					color $white
					text-align center
					text-shadow $shadow

				.submit
					float left
					width 80px
					height 48px
					font-size 23px
					line-height 25px
					color $white
					border none
					background $header-tile
					border-bottom 4px solid #333
					border-radius 8px
					cursor pointer

				.locator-zip
					float left
					width 400px
					padding 10px 20px 30px 20px
					margin 0 0 20px 0
					border-bottom 4px solid #333
					border-radius 12px

					input
						float left
						width 210px
						height 48px
						padding 0
						margin 0 20px 0 40px
						font-size 18px
						font-weight 500
						line-height 23px
						border none
						border-bottom 4px solid #333
						border-radius 8px
						text-align center
						cursor pointer

				.locator-state
					float left
					width 400px
					padding 10px 20px 20px 20px
					margin 0 0 30px 0
					background $header-tile
					border-bottom 4px solid #333
					border-radius 12px

					select
						float left
						width 300px
						height 52px
						padding 0
						margin 0 0 15px 40px
						font-weight 400
						font-size 23px
						line-height 23px
						background $white
						border none
						border-bottom 4px solid #333
						border-radius 8px
			            appearance:none
						-webkit-appearance none
						-moz-appearance none

					.submit
						width 240px
						padding 0
						margin 0
						background $black


				.locator-results
					display none

			.testimonals-holder
				position relative
				width 440px
				padding 0
				margin 0 auto

				.testimonals
					float left
					width 440px
					padding 0
					margin 0 0 60px 0

					.testimonal
						float left
						width 400px
						padding 28px 20px 28px 20px
						margin 40px 0 0 0
						background $card
						border-bottom 4px solid #333
						border-radius 12px

						p
							float left
							width 100%
							padding 0
							margin 0 0 24px 0
							font-style italic
							font-weight 600
							font-size 20px
							line-height 35px
							color $black
							text-align center
							text-shadow $white-shadow
						h2
							float left
							width 100%
							padding 0
							font-weight 600
							font-size 26px
							line-height 29px
							margin 0 0 12px 0
							text-align center
							text-shadow $white-shadow

						h3
							float left
							width 100%
							padding 0
							margin 0
							font-weight 500
							font-size 20px
							line-height 23px
							text-align center
							text-shadow $white-shadow

					.testimonal.hide
						display none
