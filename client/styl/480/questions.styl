		.fa-times
			font-size 26px
			line-height 51px

.answers
	width 400px
	margin 0 0 20px 40px

	.answer
		width 338px
		padding 22px 30px 12px 30px
		margin 0 0 14px 0

		h2
			width 298px
			padding 10px 20px 8px 20px
