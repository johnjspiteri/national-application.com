.modal-holder
	position absolute
	width 400px
	margin 0 auto
	top 0
	right 500px
	z-index 99999
	
	.modal-container
		float left
		width 398px
		height 400px
		border $border
		background #ff9
		
		.fa-close
		h1
			float left
			width 100%
			text-align center

.page
	position relative
	width 100%
	padding 0
	margin 0 auto
	z-index 1

	.content-holder
		position relative
		width 1000px
		margin 0 auto

        .content
			float left
			width 998px
			margin 0
			padding 0
			border $border
			border-top none
			border-bottom none
			background #838383

			.main
				float left
				width 460px
				padding 0
				margin 50px 0 50px 70px

				.rx-card
					float left
					width 388px
					height 190px
					padding 28px 0px 24px 30px
					margin 0 0 18px 0
					background #f1f1f1
					border 1px solid #444
					border-radius 8px

					.card-headline
						float left
						width 260px

						.company
							float left
							width 100%
							margin 0 0 20px 0

							h2
								float left
								width 100%
								font-size 27px
								line-height 27px
								text-shadow $white-shadow

						.card-title
							float left
							width 100%
							margin 0 0 16px 0

							p
								float left
								width 100%
								font-weight 600
								font-size 13px
								line-height 13px
								// text-shadow $white-shadow

					.card-logo
						float left
						width 90px
						height 60px
						background #ff9

					.card-numbers
						float left
						width 100%

						.square
							float left
							width 80px
							height 40px
							margin 0 10px 0 0
							border $border
							background $white

							p
								float left
								width 100%
								font-weight 600
								font-size 20px
								line-height 41px
								text-align center
								// text-shadow $white-shadow


				.rx-card-download
					float left
					width 440px
					padding 0
					margin 0 0 50px 20px

					.column
						float left
						width 87px
						padding 0
						margin 0 8px 0 0
						background $burgundy
						border 1px solid #777
						border-radius 4px

						h4
							float left
							width 100%
							padding 14px 0 12px 0
							margin 0
							color $white
							font-size 18px
							line-height 18px
							text-align center
							text-shadow $shadow

				.confirmation
					float left
					width 418px
					padding 0
					margin 0 0 0 220px
					border $border
					border-radius 10px
					h1
						float left
						width 100%
						padding 0 0 40px 0
						margin 0
						font-size 20px
						font-weight 400
						text-align center
					p
						float left
						width 100%
						padding 40px 0 0 0
						margin 0
						font-size 14px
						text-align center

			.points
				float left
				width 388px
				padding 0 40px 0 40px
				margin 60px 0 0 0

				.point
					float left
					width 100%
					padding 0
					margin 0 0 28px 0

					.number
						float left
						width 58px
						height 58px
						padding 0
						margin 8px 30px 0 0
						background $burgundy
						border 1px solid $black
						border-radius 1000px

						h1
							float left
							width 58px
							padding 0
							margin 0
							font-size 25px
							line-height 60px
							color $white
							text-align center
							text-shadow $shadow

					.text
						float left
						width 298px
						padding 0
						margin 0
						border none

						h3
							float left
							width 100%
							padding 0
							margin 0
							font-weight 400
							font-size 29px
							line-height 37px
							color $white
							text-align left
							text-shadow $shadow

			.center
				float left
				width 1000px
				padding 0
				margin 0 0 50px 0

				.center-holder
					float left
					width 998px
					height 260px
					margin 0
					background $white
					border $border
					border-left none
					border-right none


			.testimonals-holder
				position relative
				width 1000px
				padding 0
				margin 0 auto


				.testimonals
					float left
					width 920px
					padding 0
					margin 0 0 50px 60px

					.testimonal
						float left
						width 218px
						padding 24px 30px 28px 30px
						margin 0 20px 0 0
						background $white
						border $border

						p
							float left
							width 100%
							padding 0
							margin 0 0 0 0
							font-size 18px
							line-height 28px
							color #000
							text-align center

						h2
							float left
							width 100%
							padding 0
							font-size 21px
							line-height 21px
							margin 0 0 14px 0
							text-align center

						h3
							float left
							width 100%
							padding 0
							margin 0
							font-size 16px
							line-height 16px
							text-align center
