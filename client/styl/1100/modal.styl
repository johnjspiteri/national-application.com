.modal-holder
	position absolute
	width 400px
	margin 0 auto
	top 50px
	right 500px
	z-index 99999

	.modal-container
		float left
		width 358px
		padding 18px 0 28px 40px
		margin 12px 0 30px 0
		background $background-texture
		border $border
		border-radius 2px

		.fa-close
			float left
			width 20px
			padding 0
			margin 0 0 10px 150px
			font-size 16px
			line-height 16px
			color $burgundy
			text-align center
			text-shadow $shadow
			cursor pointer

		h1
			float left
			width 318px
			padding 0 0 8px 0
			margin 0 0 26px 0
			font-size 36px
			line-height 30px
			border none
			border-bottom 3px solid $underline
			outline none
			// text-shadow $shadow
			text-align center

		.modal-row
			float left
			width 318px
			padding 0
			margin 0

			h3
				float left
				width 318px
				padding 0
				margin 0 0 20px 0
				font-size 19px
				line-height 25px
				text-align center

			input
				float left
				width 316px
				height 52px
				padding 0
				margin 0 0 20px 0
				font-size 19px
				line-height 25px
				text-align center
				border $border

		button.submit
			float left
			width 318px
			height 62px
			padding 0
			margin 0
			font-weight 600
			font-size 27px
			line-height 59px
			color $white
			background $burgundy
			background-repeat repeat-x;
			border $border
			border-radius 4px
			box-shadow none
			box-shadow inset 0 1px 0 rgba(255,255,255,.1), 0 1px 2px rgba(0,0,0,.05);
			box-shadow 1px 1px 4px #aaa
			text-align center
			text-shadow $dark-shadow
			vertical-align middle;
			user-select none
			cursor pointer

			.fa-send
				height 24px
				padding 0
				margin 0 0 0 10px
				font-size 18px
				line-height 24px
		h1
			float left
			width 298px
			padding 0
			margin 0 0 15px
			font-size 22px
			font-weight 400
			text-align center

		.modal-row-half
			float left
			width 358px
			padding 0
			margin 0

			.half
				float left
				width 147px
				padding 0
				margin 0 20px 20px 0
				background #ff9

				input
					float left
					width 142px
					height 50px
					padding 0 5px
					margin 0
					font-size 22px
					border $border
					text-align center
		textarea
			float left
			width 318px
			padding 0
			margin 0 0 20px 0
			height 60px
			text-align center
			line-height 62px

		.mail-holder
			float left
			width 318px
			height 50px
			padding 0
			margin 0 0 15px 0

			input
				float left
				width 100%
				height 50px
				padding 0
				margin 0
				text-align center

		.rx-card
			float left
			width 358px
			height 190px
			padding 28px 0px 24px 30px
			margin 0 0 18px 0
			background $card
			border 1px solid #444
			border-radius 8px
			// overflow hidden

			.card-logo
				position absolute
				width 160px
				height 190px
				padding 0
				margin 0px 0 0 244px
				background #e3e3e3
				z-index 1

				img
					float left
					width 100%
					height 100%

			.card-content
				position absolute
				width 244px
				height 190px
				padding 0
				margin 0
				z-index 10

				.card-headline
					float left
					width 100%

					.company
						float left
						width 100%
						margin 0 0 15px 0

						h2
							float left
							width 100%
							font-size 31px
							line-height 31px
							// text-shadow $white-shadow

					.patient-holder
						float left
						width 100%
						padding 0
						margin 0

						.row
							float left
							width 244px

							padding 0
							margin 0

							h2
								float left
								width 100%
								padding 0
								margin 0
								font-size 22px
								font-weight 100
								line-height 26px

							h4
								float left
								width 100%
								padding 0
								margin 0 0 10px 10px
								font-size 16px

							.column
								float left
								width 70px
								padding 0
								margin 0

								h3
									float left
									width 100%
									font-size 16px
									font-weight 100
									line-height 24px

								h4
									float left
									width 100%
									padding 0
									margin 0
									font-size 16px
									line-height 24px
				.card-name
					float left
					width 100%
					padding 0
					margin 10px 0 10px 0

					input
						float left
						width 300px
						font-style italic
						font-size 27px
						line-height 27px
						color #666
						text-align left
						border none
						background none
