.modal-holder
	position absolute
	width 400px
	margin 0 auto
	top 50px
	right 500px
	z-index 99999
	
	.modal-container
		float left
		width 318px
		padding 18px 40px 28px 40px
		margin 12px 0 30px 0
		background $background-texture
		border $border
		border-radius 2px

		.fa-close
			float left
			width 20px
			padding 0
			margin 0 0 10px 150px
			font-size 16px
			line-height 16px
			color $burgundy
			text-align center
			text-shadow $shadow
			cursor pointer

		h1
			float left
			width 318px
			padding 0 0 8px 0
			margin 0 0 26px 0
			font-size 36px
			line-height 46px
			border none
			border-bottom 3px solid $underline
			outline none
			// text-shadow $shadow
			text-align center
		
		.modal-row
			float left
			width 318px
			padding 0
			margin 0
			
			h3
				float left
				width 318px
				padding 0
				margin 0 0 20px 0
				font-size 19px
				line-height 25px
				text-align center
				
			input
				float left
				width 316px
				height 52px
				padding 0
				margin 0 0 20px 0
				font-size 19px
				line-height 25px
				text-align center
				border $border
				
		button.submit
			float left
			width 318px
			height 62px
			padding 0
			margin 0
			font-weight 600
			font-size 27px
			line-height 59px
			color $white
			background #333
			background $burgundy
			background-repeat repeat-x;
			border $border
			border-radius 4px
			box-shadow none
			box-shadow inset 0 1px 0 rgba(255,255,255,.1), 0 1px 2px rgba(0,0,0,.05);
			box-shadow 1px 1px 4px #aaa
			text-align center
			text-shadow $dark-shadow
			vertical-align middle;
			user-select none
			cursor pointer
			
			.fa-send
				height 24px
				padding 0
				margin 0 0 0 10px
				font-size 18px
				line-height 24px
