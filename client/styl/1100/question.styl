.filter-holder
    float left
    width 878px
    padding 28px 60px
    margin 50px 0 30px 0
    background $header-tile
    border-bottom 4px solid #333
    border-radius 8px

    h2
        float left
        width 100%
        padding 0
        margin 0 0 28px 0
        font-weight 600
        font-size 33px
        line-height 33px
        color $white
        text-align center
        text-shadow $shadow

    .filter-container
        float left
        width 878px
        padding 0
        margin 0

        select
            float left
            width 258px
            height 66px
            padding 0
            margin 0 20px 0 0
            font-weight 600
            font-size 29px
            background: transparent
            border: none
            background #fff
            border $border
            border-bottom 4px solid #333
            border-radius 8px
            text-align center
            appearance none

        input
            float left
            width 498px
            height 60px
            padding 0
            margin 0 20px 0 0
            font-weight 600
            font-size 29px
            text-align center
            border $border-light
            border-bottom 4px solid #333
            border-radius 8px

        .reset
            float left
            width 78px
            height 60px
            padding 0
            margin 0
            background $black
            border none
            border-bottom 4px solid #333
            border-radius 8px
            cursor pointer

            .fa-times
                float left
                width 100%
                padding: 0
                margin 0
                font-size 23px
                line-height 66px
                color $white
                text-align center
                text-shadow $shadow

.answers-holder
    float left
    width 1020px
    padding 0
    margin 0 0 20px 0

    .answer
        float left
        width 408px
        padding 24px 40px 20px 40px
        margin 0 20px 20px 0
        background #fff
        border 1px solid #000
        border-bottom 4px solid #333
        border-radius 4px

        h2
            float left
            width 368px
            margin 0 0 18px 0
            padding 0 20px
            font-size 31px
            line-height 39px
            text-align center

        p
            float left
            width 100%
            margin 0 0 14px 0
            padding 0
            font-size 15px
            line-height 26px
            font-weight 200
            text-align center

        .tag-holder
            position relative
            width 350px
            padding 0
            margin 0 auto

            .tag
                float left
                margin 10px 5px 0 0
                padding 0
                background #000
                border-radius 4px

                h5
                    float left
                    margin 0
                    padding 8px 14px
                    font-size 15px
                    line-height 15px
                    color $white
