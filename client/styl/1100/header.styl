.top-container
	float left
	width 100%
	height 40px
	border-bottom $border
	background #def

	.program-container
		position relative
		width 940px
		padding 0
		margin 0 auto

		.saving-program
			float left
			width 760px
			height 40px

			p
				float left
				width 100%
				margin 0
				font-size 13px
				line-height 41px

		.languages
			float left
			width 180px
			padding 0
			margin 0

			.language
				float left
				width 80px
				height 24px
				padding 0
				margin 7px 6px 0 0
				background #ff9
				border $border
				border-radius 4px

				h4
					float left
					width 100%
					padding 0
					margin 0 auto
					font-size 10px
					text-align center
					line-height 26px

header
	float left
	width 100%
	padding 0
	margin 0
	background $background-texture
	border-bottom 1px solid #333

	.header
		position relative
		width 1000px
		height 84px
		padding 0
		margin 0 auto

		.brand
			float left
			width 250px
			height 84px
			padding 0
			margin 0
			background #fff

			.logo
				display none
				float left
				width 250px
				height 84px
				padding 0
				margin 0
				font-size 14px
				line-height 50px
				background #fff
				text-align center

		nav
			float left
			width 749px
			height 84px
			padding 0
			margin 0
			border-right 1px solid #333

			.tile
				float right
				height 84px
				padding 0 34px 0 34px
				margin 0
				background #838383
				border-left 1px solid #333

				h4
					float left
					padding 0
					margin 22px 0 0 0
					font-weight 600
					font-style italic
					font-size 20px
					line-height 25px
					color $white
					text-align center
					text-shadow $shadow

			.tile.active
				height 85px
				background $burgundy
				border-left 1px solid #333

				h4
					font-style normal
					margin 23px 0 0 0
					font-size 20px
					line-height 25px
