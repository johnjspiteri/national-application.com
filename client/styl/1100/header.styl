header
	float left
	width 100%
	top 0
	padding 0
	margin 0
	background $header
	border-bottom $border-header

	.header
		position relative
		width 1000px
		height 78px
		padding 0
		margin 0 auto

		.brand
			float left
			width 280px
			height 78px
			padding 0
			margin 0

			.logo
				float left
				width 270px
				height 78px
				padding 0
				margin 0
				font-size 14px
				line-height 50px
				// background #d1d1d1
				border 1px dotted $black
				border-top none
				border-bottom none
				text-align center

		nav
			display block
			float left
			width 719px
			height 78px
			padding 0
			margin 0
			border-right $border-header

			.tile
				float right
				height 78px
				padding 0 32px 0 32px
				margin 0
				background $header-tile-gradient
				border-left $border-header
				cursor pointer

				h4
					float left
					padding 0
					margin 19px 0 0 0
					font-weight 500
					font-size 20px
					line-height 24px
					color $white
					text-align center
					text-shadow $shadow

			.tile.active
				height 79px
				background $background

				h4
					margin 20px 0 0 0
					font-size 20px
					line-height 24px
