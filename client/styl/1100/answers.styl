.faq-holder
    float left
    width 958px
    padding 40px 0 0 40px
    margin 0

    .input-holder
        float left
        width 918px
        padding 20px
        margin 0 0 20px 0

        .input-container
            float left
            width 814px
            padding 20px 30px
            margin 0
            border $border

            h2
                float left
                width 100%
                padding 0
                margin 0 0 10px 0
                font-size 29px
                line-height 31px
                text-align center

            input
                float left
                width 812px
                height 40px
                padding 0
                margin 0
                font-size 21px
                line-height 40px
                text-align center
                border $border-light


        .reset-holder
            position relative
            width 90px
            margin 0 auto

            .reset
                float left
                width 100%
                height 31px
                padding 0
                margin 0 0 26px 0
                background $burgundy
                border $border
                border-top none
                border-radius 0 0 4px 4px
                cursor pointer

                p
                    float left
                    width 100%
                    font-weight 400
                    font-size 16px
                    line-height 33px
                    color $white
                    text-align center

                    .fa-times
                        padding: 0
                        margin 0 0 20px 4px
                        font-size 15px
                        line-height 32px
                        color $white
                        text-shadow $dark-shadow



    .answers-holder
        float left
        width 958px
        padding 0
        margin 0

        .answer
            float left
            width 429px
            padding 10px
            margin 0 20px 20px 0
            //background #ff9

            h2
                float left
                width 100%
                margin 0 0 10px 0
                padding 0

            p
                float left
                width 100%
                margin 0 0 14px 0
                padding 0
                font-size 15px
                font-weight 400

            .tag
                float left
                margin 0 5px 0 0
                padding 0
                background #000
                border-radius 4px

                h5
                    float left
                    margin 0
                    padding 5px
                    color $white
