.contact-holder
    float left
    width 978px
    padding 20px 0 20px 20px
    margin 30px 0 0 0

    .contact-detail
        float left
        width  428px
        padding 20px 0 20px 30px
        margin 0 20px 0 0
        border $border
        background $white
        h2
            float left
            width 200px
            padding 0
            margin 0 0 10px 0
            font-size 18px
            text-align center

        .contact-container
            float left
            width 428px
            padding 0
            margin 0

            .address
                float left
                width 130px
                padding 0
                margin 0

                p
                    float left
                    width 150px
                    padding 0
                    margin 0
                    font-size 14px
                    font-weight 200
                    line-height 22px
                    font-weight 400

            .contact-information
                float left
                width 268px
                padding 0
                margin 0
                //background #def
                h3
                    float left
                    width 100%
                    padding 0
                    margin 0
                    font-size 16px
                    font-weight 300
                    line-height 22px
                    font-weight 400

    .contact-form
        float left
        width 466px
        //height 220px
        padding 20px 0 10px 30px
        margin 0 0 20px 0
        border $border

        .half
            float left
            width 208px
            padding 0
            margin 0 20px 20px 0
            background #ff9
            //border $border
            input
                float left
                width 198px
                padding 5px
                margin 0

        .full
            float left
            width 436px
            padding 0
            margin 0 0 20px 0

            input
            textarea
                float left
                width 426px
                padding 5px
                margin 0

        .button-holder
            position relative
            width 466px
            margin 0 auto

            button
                float left
                width 434px
                height 40px
                padding 0
                margin 0
                border $border
                cursor pointer
                
        .card-confirmation
            float left
            width 466px
            padding 0
            margin 0

            h1
                float left
                width 436px
                padding 0
                margin 0 0 20px 0
                font-size 24px
                text-align center

            h2
                float left
                width 100%
                padding 0
                margin 0 0 15px 0
                font-size 18px
                font-weight 400
                text-align center

            p
                float left
                width 100%
                margin 0
                font-size 14px
                font-weight 200
                text-align center

    .map
        float left
        width 956px
        height 420px
        padding 0
        margin 0
        border $border
