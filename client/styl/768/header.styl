header
	height 234px
	margin 0 0 50px 0

	.header
		width 768px

		.brand
			width 690px
			height 142px
			margin 0

			.logo
				width 290px
				margin 22px 0 12px 70px

			.mobile-navigation
				display none

		nav
			display block
			float right
			width 768px
			height 74px
			padding 0
			margin 0
			border-radius 6px 0 0 0

			.tile
				float right
				height 73px
				padding 0 26px
				margin 0
				background $grey
				border-top $border-header
				border-left $border-header
				cursor pointer

				h4
					float left
					padding 0
					margin 11px 0 0 0
					font-weight 600
					font-size 21px
					line-height 24px
					color $white
					text-align center
					text-shadow $grey-text-shadow

			.tile.active
				height 74px
				background $background

			.tile.first
				border-radius 6px 0 0 0