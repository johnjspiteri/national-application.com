.faq-holder
    float left
    width 958px
    padding 40px 0 20px 40px
    margin 0

    .input-holder
        float left
        width 918px
        padding 20px
        margin 0 0 20px 0

        .input-container
            float left
            width 754px
            padding 20px 60px
            margin 0
            border $border
            border-radius 4px
            background #f1f1f1

            h2
                float left
                width 100%
                padding 0
                margin 0 0 20px 0
                font-size 33px
                line-height 33px
                text-align center

            input
                float left
                width 752px
                height 60px
                padding 0
                margin 0
                font-weight 600
                font-size 29px
                text-align center
                border $border-light


        .reset-holder
            position relative
            width 90px
            margin 0 auto

            .reset
                float left
                width 100%
                height 31px
                padding 0
                margin 0 0 26px 0
                background $black
                border $border
                border-top none
                border-radius 0 0 4px 4px
                border 1px solid $black
                cursor pointer

                p
                    float left
                    width 100%
                    font-weight 400
                    font-size 16px
                    line-height 33px
                    color $white
                    text-align center

                    .fa-times
                        padding: 0
                        margin 0 0 20px 4px
                        font-size 15px
                        line-height 32px
                        color $white
                        text-shadow $white-shadow



    .answers-holder
        float left
        width 958px
        padding 0
        margin 0

        .answer
            float left
            width 828px
            padding 24px 40px 20px 40px
            margin 0 50px 20px 0
            background #f1f1f1
            border 1px solid #000

            h2
                float left
                width 100%
                margin 0 0 18px 0
                padding 0
                font-size 27px
                line-height 29px
                text-align center

            p
                float left
                width 100%
                margin 0 0 14px 0
                padding 0
                font-size 15px
                line-height 26px
                font-weight 200
                text-align center

            .tag-holder
                position relative
                width 350px
                padding 0
                margin 0 auto

                .tag
                    float left
                    margin 10px 5px 0 0
                    padding 0
                    background #000
                    border-radius 4px

                    h5
                        float left
                        margin 0
                        padding 8px 14px
                        font-size 15px
                        line-height 15px
                        color $white
