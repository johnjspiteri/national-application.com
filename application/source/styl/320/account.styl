.lists
	float left
	width 280px
	margin 0 0 30px 0

	.list
		float left
		width 238px
		padding 20px 20px 16px 20px
		margin 0 0 14px 20px
		background $card
		border $card-border
		border-radius 4px
		cursor pointer

		.image
			float left
			width 238px
			padding 0
			margin 0 0 20px 0

			.thumb-image
				float left
				width 236px
				padding 0 0 1px 0
				margin 0
				min-height 80px
				background $white
				border 1px solid #ccc

		.information
			float left
			width 238px

			h3
				float left
				width 218px
				height 29px
				padding 4px 10px 6px 10px
				margin 0
				font-size 25px
				line-height 30px
				background $white
				border 1px solid #ccc
				text-align center
				text-shadow $card-text-shadow
				-webkit-appearance none
				-moz-appearance none
				appearance none
				cursor pointer
				border-radius: 0
				outline none
				color $black
				font-weight 400

			h5
				float left
				width 238px
				margin 0 0 10px 0
				font-size 20px
				line-height 20px
				text-align center
				text-shadow $card-text-shadow

	.item
		float left
		width 238px
		padding 20px 20px 0 20px
		margin 0 0 14px 20px
		background $card
		border $card-border
		border-radius 4px
		cursor pointer

		.image
			float left
			width 238px
			padding 0
			margin 0 0 20px 0

			.tag-holder
				position absolute
				width 218px
				margin: 0

				.tag
					float right
					width 38px
					height 38px
					padding 0
					margin 0 6px 0 0
					background $grey
					border $black-border
					border-top none
					border-radius 0 0 4px 4px
					box-shadow none
					cursor pointer
					outline none

					.fa-pencil
						float right
						width 38px
						height 38px
						font-size 21px
						line-height 43px
						color $white
						border none
						text-align center
						text-shadow 0 -1px 0 rgba(0, 0, 0, 0.25)

					.fa-arrows-h
						float right
						width 38px
						height 38px
						font-size 23px
						line-height 43px
						color $white
						border none
						text-align center
						text-shadow 0 -1px 0 rgba(0, 0, 0, 0.25)

					.file-upload
						position absolute
						width 38px
						height 38px
						padding 0
						margin 0
						border none
						cursor pointer
						z-index 1

						input[type='file']
							display none
							padding 0
							margin 0

				.tag.save
					background $burgundy

					.fa-cloud
						float right
						width 38px
						height 38px
						font-size 17px
						line-height 43px
						color $white
						border none
						text-align center
						text-shadow 0 -1px 0 rgba(0, 0, 0, 0.25)

					.fa-arrows-h
						float right
						width 38px
						height 38px
						font-size 23px
						line-height 43px
						color $white
						border none
						text-align center
						text-shadow 0 -1px 0 rgba(0, 0, 0, 0.25)

			.thumb-image
				float left
				width 236px
				padding 0 0 1px 0
				margin 0
				min-height 80px
				background $white
				border 1px solid #ccc

		.information
			float left
			width 238px

			.h3
				float left
				width 216px
				height 30px
				padding 4px 10px 4px 10px
				margin 0
				font-size 25px
				line-height 30px
				background $white
				border 1px solid #ccc
				text-align center
				text-shadow $card-text-shadow
				-webkit-appearance none
				-moz-appearance none
				appearance none
				cursor pointer
				border-radius: 0
				outline none
				color $black
				font-weight 400

			.h3.disabled
				background #e1e1e1
				color $black

			h5
				float left
				width 238px
				margin 0 0 10px 0
				font-size 20px
				line-height 20px
				text-align center
				text-shadow $card-text-shadow

			.full
				float left
				width 238px
				margin 0 0 28px 0

		.submit
			float left
			width 238px
			padding 12px 0 10px 0
			margin 0 0 20px 0
			font-weight 400
			border-radius 4px 4px 4px 4px
			background $burgundy
			border $black-border
			color $white
			font-size 25px
			line-height 25px
			text-align center
			text-shadow $burgundy-text-shadow

		.submit.disabled
			background $grey